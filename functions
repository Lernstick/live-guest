notify_dm() {
  pkill -HUP gdmgreeter || true
  /etc/init.d/kdm restart || true
}

log() {
  logger -t live-guest -p user.${1} ${2}
}

cleanup_and_exit() {
  for mp in ${MOUNTPOINTS} ; do
    umount $mp && rmdir $mp && true
    log debug "Unmounting $mp."
  done
  rm ${LOCKFILE} && true
  exit $1
}

source_parts() {
  [ -d $1 ] || return
  conffiles=$(echo $1/*.conf | sort)
  for f in $conffiles ; do
    . $f
  done
}

